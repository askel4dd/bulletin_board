= simple_form_for(@user) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :login
    = f.input :fname
    = f.input :lname
    = f.input :birthday
    = f.input :address
    = f.input :city
    = f.input :zip
    = f.input :state
    = f.input :country
    = f.input :role_id, collection: Role.all if current_user.role? :admin
    = f.input :current_password unless current_user.role? :admin

  .form-actions
    = f.button :submit
